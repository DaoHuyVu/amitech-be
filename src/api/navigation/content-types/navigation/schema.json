{
  "kind": "collectionType",
  "collectionName": "navigations",
  "info": {
    "singularName": "navigation",
    "pluralName": "navigations",
    "displayName": "Navigation",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "parentNavigation": {
      "type": "string"
    },
    "menuLocation": {
      "type": "string",
      "required": false
    },
    "hasChildren": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "description": {
      "type": "text"
    },
    "imageCover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post.post",
      "mappedBy": "navigations"
    },
    "navigation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::navigation.navigation",
      "inversedBy": "childrenNavigations"
    },
    "childrenNavigations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::navigation.navigation",
      "mappedBy": "navigation"
    },
    "subCategories": {
      "type": "enumeration",
      "enum": [
        "Tin tổng hợp",
        "Tin hoạt động của Amitech",
        "Thiết bị giám sát điện",
        "Thiết bị giám sát khí nén",
        "Thiết bị giám sát tiêu thụ nước"
      ]
    },
    "sub_categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sub-category.sub-category",
      "mappedBy": "navigation"
    }
  }
}
